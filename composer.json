{
    "name": "reactphp-x/log",
    "homepage": "https://github.com/reactphp-x/log",
    "description": "Non-blocking logging for PHP based on reactphp, and Monolog.",
    "keywords": [
        "log",
        "logging",
        "logger",
        "async",
        "non-blocking",
        "reactphp"
    ],
    "license": "MIT",
    "authors": [
       {
            "name": "wpjscc",
            "email": "wpjscc@gmail.com"
       }
    ],
    "require": {
        "php": ">=8.1",
        "monolog/monolog": "^3|^2|^1.23",
        "psr/log": "^3|^2|^1",
        "react/stream": "^1.3",
        "wpjscc/filesystem": "^0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "ReactphpX\\Log\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "scripts": {
        "test": "@php -dzend.assertions=1 -dassert.exception=1 ./vendor/bin/phpunit",
        "code-style": "@php ./vendor/bin/php-cs-fixer fix"
    }
}
